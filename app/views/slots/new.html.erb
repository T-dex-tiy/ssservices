<h1>New Slots Form</h1>

<%= form_for @slot do |f| %>

	<%= f.label :date %>
	<%= f.date_field :date %><br>

	<%= f.label :city %>
	<%= f.text_field :city %><br>

	<%= hidden_field(:state, "Utah") %>

	<%= f.label :contact %>
	<%= f.select :contact, options_for_select(contact_options) %><br>

	<%= f.label :start_time %>
	<%= f.date_field :start_time %>

	<%= f.label :end_time %>
	<%= f.date_field :end_time %><br>

	<%= f.submit "Add Slot" %><br>

<% end %> 

